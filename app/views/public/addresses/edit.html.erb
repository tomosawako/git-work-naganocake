<div class="container">
  <div class="row my-5">
    <div class="col-sm-2"></div>
    <h3 class="border border-secondary bg-light">配送先編集</h3>
  </div>

    <%= form_with model: @address,url:addresses_path, method: :post do |f| %>
    <div class="form-group row ml-5" >
      <%= f.label :postal_code,"郵便番号(ハイフンなし)", class:"col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :postal_code, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row ml-5" >
      <%= f.label :address,"住所", class:"col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :address, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row ml-5" >
      <%= f.label :address,"宛名", class:"col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="col-sm-4"></div>
        <%= f.submit '変更内容を保存', class:"btn btn-success" %>
    </div>
    <% end %>
</div>
