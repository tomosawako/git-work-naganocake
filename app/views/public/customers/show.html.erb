<div class="container">
  <div class="row">
    <div class="col-1"></div>
      <h4 class="border border-secondary bg-light my-4">　マイページ　</h4>
  </div>
      <div class="row">
        <div class="col">
          <div class="d-flex align-items-center">
            <h4><strong>登録情報</strong></h4>
            <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success ml-3" %>
          </div>
          <table class="table table-bordered my-3">
            <tr>
              <td class="bg-light">氏名</td>
              <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
            </tr>

            <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>

        </table>
      </div>
    </div>
    <div class="d-flex align-items-center row">
      <h4 class="col-4"><strong>配送先</strong></h4>
      <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3 my-2" %>
    </div>

    <div class="d-flex align-items-center row">
      <h4 class="col-4"><strong>注文履歴</strong></h4>
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-3 my-2" %>
    </div>
  </div>
