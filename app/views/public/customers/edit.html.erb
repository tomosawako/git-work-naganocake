<div class="container">
  <div class="row mb-4">
    <div class="col-sm-1"></div>
    <h3 class="border border-secondary bg-light">会員情報編集</h3>
  </div>

    <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
    <div class="form-group row">
    <%=f.label :name, "氏名", class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%=f.label :name_kana, "フリガナ", class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :last_name_kana, class:"form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name_kana, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, "住所",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-7">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :telephone_number, "電話番号",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :telephone_number, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, "メールアドレス",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    <%= f.submit "編集内容を保存", class:"btn btn-success mr-4" %>
    </div>
    <%= link_to "退会する","#", class:"btn btn-danger ml-4" %>
  </div>

  <% end %>

</div>
