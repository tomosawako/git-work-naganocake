<div class="container">
  <div class="row mb-4">
    <div class="col-sm-1"></div>
    <h3 class="border border-secondary bg-light">新規会員登録</h3>
  </div>

<form class="form-horizontal" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%=f.label :name, "名前", class:"col-sm-3 control-label" %>
    <div class="col-sm-1">
      <%= f.label :last_name, "(姓)", class:"control-form" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="col-sm-1">
      <%= f.label :first_name, "(名)", class:"control-form" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%=f.label :name_kana, "フリガナ", class:"col-sm-3 control-label" %>
    <div class="col-sm-1">
      <%= f.label :last_name_kana, "(セイ)", class:"control-form" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :last_name_kana, class:"form-control" %>
    </div>
    <div class="col-sm-1">
      <%= f.label :first_name_kana, "(メイ)", class:"control-form" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name_kana, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, "メールアドレス",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, "住所",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-7">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)",class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.text_field :telephone_number, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3 control-label">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "パスワード(確認用)", class:"col-sm-3 control-label" %>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="actions row my-4">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 ">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
<% end %>
</form>

  <div class="row">
  <p class="border border-secondary bg-light" >既に登録済みの方</p>
  </div>
  <div class="row">
  <%= render "public/shared/links" %>からログインしてください。
  </div>
</div>