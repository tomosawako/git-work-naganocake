<h4 class="my-5 mx-5">商品一覧</h4>
<%= link_to "+", "/admin/items/new", class:"btn btn-light rounded-circle p-0" %>


<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active %>
         <p class="text-success"><b>販売中</b></p>
        <% elsif %>
         <p class="text-secondary"><b>販売停止中</b></p>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

