<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-sm-1"></div>
    <h4 class="border border-secondary bg-light">注文履歴一覧</h4>
  </div>

  <div class="row">
    <div class="co-sm-1"></div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td>
            <%= link_to admin_order_path(order_detail.order.id) do %>
            <%= l order_detail.created_at%>
            <% end %>
          </td>
          <td><%= order_detail.order.customer.last_name %><%= order_detail.order.customer.first_name %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.order.status %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="co-sm-1"></div>
  </div>
  <div class="row">
    <div class="col-sm-4"></div>
  　<%= paginate @order_details %>
  　<div class="col-sm-4"></div>
　</div>
</div>



