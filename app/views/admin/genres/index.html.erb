<h4 class="my-5 mx-5">ジャンル一覧・追加</h4>
<div class="mb-5">
  <%= form_with model: @genre, url: admin_genres_path, mehod: :post do |f| %>
  <b><%= f.label :"ジャンル名", class: "mx-5" %></b>
  <%= f.text_field :name, class: "mx-4" %>
  <%= f.submit '新規登録', class: "btn btn-success ml-4" %>
  <% end %>
</div>

<table class="table col-5 ml-5">
  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
  <% end %>
</table>
