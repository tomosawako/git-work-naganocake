<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-sm-1"></div>
    <h3 class="border border-secondary bg-light text-left my-4 ml-4">管理者ログイン</h3>
  </div>

<form class="form-horizontal" >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row" >
    <div class="col-sm-2"></div>
    <%= f.label :email,"メールアドレス", class:"col-sm-2 control-label" %>
    <div class="col-sm-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"></div>
    <%= f.label :password, "パスワード", class:"col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>

  <div class="actions row mt-4">
    <div class="col-sm-4"></div>
    <%= f.submit "ログイン", class:"btn btn-primary col-sm-2" %>
  </div>
<% end %>
</form>

<%= render "admin/shared/links" %>
</div>
